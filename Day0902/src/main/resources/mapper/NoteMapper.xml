<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sesoc.day0902.dao.BoardMapper">

	<insert id="noteWrite" parameterType="note">
		insert into
			tb_memo(
				memo_seq
				,memo_content
				,reg_id
				,reg_dt
			)values(
				memo_seq.nextval
				,#{memo_content}
				,#{reg_id}
				,#{reg_dt}
			)
	
	</insert>

	<select id="noteSelectOne" parameterType="string" resultType="note">
		select
			,memo_content
			,reg_id
			,reg_dt
		from
			tb_mbr_mng
		where
			reg_id = #{reg_id}
	
	</select>
	
	<delete id="noteDelete" parameterType="string">
		delete from
	   		tb_memo
		where
	    	reg_id = #{reg_id}
	
	</delete>
	
	<update id="noteUpdate" parameterType="note">
		update
			tb_memo
		set
			memo_content = #{memo_content}
		where
			reg_id = #{member_id}
	
	</update>

</mapper>
