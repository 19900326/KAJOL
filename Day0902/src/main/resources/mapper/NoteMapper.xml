	<select id="noteSelect" resultType="note">
		select
			memo_seq
			,memo_content
			,reg_id
			,reg_dt
		from			
			tb_memo
			
		order by
			reg_id
		
	</select>
	
	<delete id="noteDelete" parameterType="int">
		delete from
	   		tb_memo
		where
	    	memo_seq = #{memo_seq}
	
	</delete>
	
	<update id="noteUpdate" parameterType="note">
		update
			tb_memo
		set
			memo_content = #{memo_content}
		where
			memo_seq = #{memo_seq}
	
	</update>

</mapper>
